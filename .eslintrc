{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["babel", "react", "prettier"],
  "rules": {
    "curly": "warn",
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error", "info"]
      }
    ],
    "no-else-return": "warn",
    "no-invalid-this": 0,
    "no-magic-numbers": 0,
    "no-useless-return": "warn",
    "prefer-const": [
      "warn",
      {
        "destructuring": "all"
      }
    ],
    "prefer-template": "warn",
    "prettier/prettier": "error",
    "quotes": [2, "single"],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "react/sort-comp": 0,
    "semi": [2, "always"],
    "strict": [2, "never"]
  }
}
